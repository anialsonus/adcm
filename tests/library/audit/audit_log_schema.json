{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "audit_log_schema.json",
  "type": "object",
  "properties": {
    "defaults": {
      "$ref": "#/definitions/defaults"
    },
    "settings": {
      "$ref": "#/definitions/settings"
    },
    "operations": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/create-operation"
          },
          {
            "$ref": "#/definitions/update-operation"
          },
          {
            "$ref": "#/definitions/delete-operation"
          }
        ]
      }
    }
  },
  "required": [
    "operations"
  ],
  "definitions": {
    "defaults": {
      "type": "object",
      "properties": {
        "result": {
          "$ref": "#/definitions/operation-result"
        },
        "user": {
          "type": "string"
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "process-type": {
          "type": "string",
          "enum": [
            "exact",
            "sequence",
            "presence"
          ]
        },
        "start-from-first": {
          "type": "string",
          "enum": [
            "record",
            "matched"
          ]
        }
      }
    },
    "create-operation": {
      "type": "object",
      "properties": {
        "create": {
          "type": "object",
          "properties": {
            "what": {
              "$ref": "#/definitions/operation-target"
            },
            "how": {
              "$ref": "#/definitions/operation-how"
            }
          },
          "required": [
            "what"
          ]
        },
        "result": {
          "$ref": "#/definitions/operation-result"
        },
        "username": {
          "type": "string"
        }
      },
      "required": [
        "create"
      ]
    },
    "delete-operation": {
      "type": "object",
      "properties": {
        "delete": {
          "type": "object",
          "properties": {
            "what": {
              "$ref": "#/definitions/operation-target"
            },
            "how": {
              "$ref": "#/definitions/operation-how"
            }
          },
          "required": [
            "what"
          ]
        },
        "result": {
          "$ref": "#/definitions/operation-result"
        },
        "username": {
          "type": "string"
        }
      },
      "required": [
        "delete"
      ]
    },
    "update-operation": {
      "type": "object",
      "properties": {
        "update": {
          "type": "object",
          "properties": {
            "what": {
              "$ref": "#/definitions/operation-target"
            },
            "how": {
              "$ref": "#/definitions/operation-how"
            },
            "changes": {
              "$ref": "#/definitions/changes"
            }
          },
          "required": [
            "what",
            "how"
          ]
        },
        "result": {
          "$ref": "#/definitions/operation-result"
        },
        "username": {
          "type": "string"
        }
      },
      "required": [
        "update"
      ]
    },
    "operation-target": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "It's type that will be in object_type field, but not always the created/deleted one (see group configs). In those cases should be read as OPERATION 'on' smt, event as it's a CREATE.",
          "enum": [
            "adcm",
            "bundle",
            "cluster",
            "service",
            "component",
            "provider",
            "host",
            "user",
            "group",
            "role",
            "policy"
          ]
        },
        "name": {
          "type": "string"
        }
      }
    },
    "operation-result": {
      "type": "string",
      "enum": [
        "success",
        "fail",
        "denied"
      ]
    },
    "operation-how": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "operation": {
              "type": "string"
            },
            "name": {
              "type": "string",
              "description": "Depending on context it may be display name of action/service, FQDN of host, etc."
            },
            "group_name": {
              "type": "string",
              "description": "Used for 'config group' related operations"
            }
          },
          "required": [
            "operation"
          ]
        },
        {
          "type": "string"
        }
      ]
    },
    "changes": {
      "type": "object",
      "properties": {
        "previous": {
          "type": "object"
        },
        "current": {
          "type": "object"
        }
      }
    }
  }
}
